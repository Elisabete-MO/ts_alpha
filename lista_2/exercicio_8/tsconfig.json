{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}